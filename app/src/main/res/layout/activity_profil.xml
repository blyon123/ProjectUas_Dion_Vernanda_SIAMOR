<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8D021F"
    tools:context=".ProfilActivity">

    <!-- Header / Tombol Kembali -->
    <LinearLayout
        android:id="@+id/headerProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Saya"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Foto Profil Melayang -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerProfil"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="4dp"
        android:elevation="16dp"/>

    <!-- Kontainer Putih (Sama seperti Dashboard) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-60dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgProfile">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:paddingTop="70dp"> <!-- Padding agar teks tidak tertutup foto profil -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Nama & ID -->
                <TextView
                    android:id="@+id/tvNamaProfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dion Vernanda"
                    android:textAlignment="center"
                    android:textColor="#333333"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Relawan: PMI-123456"
                    android:textAlignment="center"
                    android:textColor="#8D021F"
                    android:textSize="14sp"
                    android:layout_marginBottom="30dp"/>

                <!-- Detail Info Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#F0F0F0"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_dialog_email"
                                app:tint="#8D021F"/>
                            <!-- ID Relawan -->
                            <TextView
                                android:id="@+id/tvEmailProfil"
                                android:layout_width="wrap_content"    android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="ahmad@pmi.or.id"
                                android:textColor="#444444"/>
                        </LinearLayout>

                        <!-- Telepon -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="15dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/stat_sys_phone_call"
                                app:tint="#8D021F"/>
                            <TextView
                                android:id="@+id/tvTeleponProfil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="+62 812 3456 7890"
                                android:textColor="#444444"/>
                        </LinearLayout>

                        <!-- Alamat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_mapmode"
                                app:tint="#8D021F"/>

                            <TextView
                                android:id="@+id/tvUnitProfil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="Markas PMI, Jl. Gatot Subroto"
                                android:textColor="#444444"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tombol Aksi -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToEdit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="30dp"
                    android:textColor="#FFFFFF"
                    android:text="EDIT PROFIL"
                    android:backgroundTint="#8D021F"
                    app:cornerRadius="12dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:text="LOGOUT"
                    android:textColor="#B71C1C"
                    app:strokeColor="#B71C1C"
                    app:cornerRadius="12dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
