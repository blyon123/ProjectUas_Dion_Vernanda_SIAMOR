<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8D021F"
    tools:context=".DashboardActivity">

    <!-- Logo PMI di Pojok Kanan Atas -->
    <ImageView
        android:id="@+id/logoPmi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logopmi1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang,"
            android:textColor="#FFFFFF"
            android:alpha="0.8"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DASHBOARD"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <!-- Menu Grid Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginBottom="-40dp"> <!-- Efek kartu menumpuk -->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bgpmi"
                android:paddingBottom="200dp"> <!-- Tambah padding bawah agar tidak terpotong -->

                <!-- Handle bar desain -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="#E0E0E0" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="574dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:padding="15dp">

                    <!-- Tombol Anggota -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnMenuAnggota"
                        android:text="@string/menu_anggota"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="OpenAnggota"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:rippleColor="#158D021F"
                        app:strokeColor="#F5F5F5"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E8EBEA"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_soft"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_myplaces"
                                app:tint="#8D021F" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Anggota &amp; Relawan"
                                android:textAlignment="center"
                                android:textColor="#333333"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tombol Organisasi -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="openOrganisasi"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:rippleColor="#158D021F"
                        app:strokeColor="#F5F5F5"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E8EBEA"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_soft"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_manage"
                                app:tint="#8D021F" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Data Organisasi"
                                android:textAlignment="center"
                                android:textColor="#333333"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tombol Kegiatan (Banner Style) -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="2"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="openKegiatan"
                        app:cardBackgroundColor="#FFF5F5"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="6dp"
                        app:strokeColor="#FFEBEE"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E8EBEA"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="24dp">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@android:drawable/ic_menu_today"
                                app:tint="#8D021F" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pelaporan Kegiatan"
                                    android:textColor="#8D021F"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Update laporan harian Anda"
                                    android:textColor="#666666"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_media_play"
                                app:tint="#8D021F" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tombol Profil (Full Width) -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="2"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="openProfil"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:rippleColor="#158D021F"
                        app:strokeColor="#F5F5F5"
                        app:strokeWidth="1dp">

                        <!-- Tombol Profil -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnMenuProfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="openProfil"
                            app:cardCornerRadius="24dp">
                            <!-- Isi konten card tetap sama -->
                        </com.google.android.material.card.MaterialCardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E8EBEA"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_soft"
                                android:padding="10dp"
                                android:src="@android:drawable/ic_menu_edit"
                                app:tint="#8D021F" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Profil Pengguna"
                                    android:textColor="#333333"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pengaturan akun &amp; informasi diri"
                                    android:textColor="#888888"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_info_details"
                                app:tint="#D3D3D3" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tombol KTA (Full Width - di bawah Profil) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnMenuKTA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="2"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="OpenKTA"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:rippleColor="#158D021F"
                        app:strokeColor="#F5F5F5"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#E8EBEA"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_soft"
                                android:padding="10dp"
                                android:src="@drawable/baseline_add_card_24"
                                app:tint="#8D021F" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kartu Tanda Anggota (KTA)"
                                    android:textColor="#333333"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lihat &amp;unduh KTA digital Anda"
                                    android:textColor="#888888"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_media_play"
                                app:tint="#D3D3D3" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>



